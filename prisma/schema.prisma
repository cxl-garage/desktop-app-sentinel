// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ModelRun {
  id         Int     @id @default(autoincrement())
  modelPath  String
  modelName  String
  outputPath String
  startTime  Int
  inputPath String
  confidenceThreshold Float
  outputStyle String

  // tbd: These results may be better stored somewhere users can view out-of-app
  // e.g. as csv or json at outputPath
  imageCount Int @default(0)
  emptyImageCount Int @default(0)
  detectedObjectCount Int @default(0)
}
